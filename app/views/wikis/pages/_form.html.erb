<div id="wikis-form">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<%= form_for [@wiki, @page] do |f| %>

					<%= f.label :title %>
					<%= f.text_field :title, class: 'form-control', placeholder: "Enter a page title" %>

					<%= f.label :body %>
					<%= f.text_area :body, class: 'form-control', placeholder: "Begin writing your wiki" %>

					<%= f.submit "Save" %>

				<% end %>
			</div>
		</div>
	</div>
</div>