<%= form_for page do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control', placeholder: "Enter a page title" %>
	</div>

	<div class="form-group">
		<%= f.label :body %>
		<%= f.text_area :body, class: 'form-control', placeholder: "Begin writing your wiki" %>
	</div>

	<div class="form-group">
		<%= f.submit "Save", class: 'btn btn-success' %>
	</div>
	

<% end %>