<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Create a New Page:</h1>
			<%= form_for @page do |f| %>
				<div class="form-group">
					<%= f.label :title %>
					<%= f.text_field :title %>
				</div>

				<div class="form-group">
					<%= f.label :body %>
					<%= f.text_area :body %>
				</div>

				<div class="form-group">
					<%= f.submit "Save" %>
				</div>
				

			<% end %>
		</div>
	</div>
</div>